<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="digitalhouse.com.mundialapp.DetalleJugadorFragment"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewImagenJugador"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:src="@drawable/messi"
        android:scaleType="centerCrop"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:textColor="#000000"
        tools:text="NOMBRE DEL JUGADOR"
        android:id="@+id/textViewNombreJugador"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"

        android:textColor="#000000"
        tools:text="Equipo del Jugador"
        android:id="@+id/textViewEquipoJugador"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="13sp"
        tools:text="Posicion"
        android:id="@+id/textViewPosicionJugador"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        tools:text="NÃºmero"
        android:textSize="13sp"
        android:id="@+id/textViewNumeroJugador"
        />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#000"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="HABILIDADES DE JUGADOR"
        android:layout_marginTop="20dp"
        android:id="@+id/textViewHabilidadesJugador"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="TITULOS DE JUGADOR"
        android:layout_marginTop="20dp"
        android:id="@+id/textViewTitulosObtenidosJugador"/>

</LinearLayout>
